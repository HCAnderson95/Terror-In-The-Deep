#pragma strict

var Spongebob:GameObject;
var Squidward:GameObject;
var cam:Camera;

function Start () {
  cam=GetComponent.<Squidward>();
	
}

function Update(){
	var hit:RaycastHit;//stores the hit info
	var ray:Ray=cam.ScreenPointToRay(Input.mousePosition);

    if(Physics.Raycast(ray,hit)){
      Spongebob.transform.position = Spongebob.transform.position;
    }

    else{
    Spongebob.transform.position = Vector3.MoveTowards(transform.position, Squidward.transform.position, .03);
    }
}
